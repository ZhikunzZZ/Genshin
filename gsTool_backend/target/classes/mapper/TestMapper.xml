<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gstool.common.dao.TestDao">

    <sql id="commonWhere">
        <if test="query.id != null and query.id != '' ">
            and t1.ID = #{query.id}
        </if>
        <if test="query.name != null and query.name != '' ">
            and t1.NAME = #{query.name}
        </if>
    </sql>

    <select id="queryList" resultType="com.gstool.common.model.vo.TestVO" parameterType="com.gstool.common.model.query.TestQuery">
        select
            t1.ID,
            t1.NAME
        from TEST t1
        <where>
            <include refid="commonWhere" />
        </where>
    </select>
</mapper>